<Window x:Class="WpfDemoProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDemoProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <SolidColorBrush Color="Red" x:Key="RedBrush"/>
        <SolidColorBrush Color="Blue" x:Key="BlueBrush"/>
        <SolidColorBrush Color="Green" x:Key="GreenBrush"/>
    </Window.Resources>
    <Grid>
        <Button Content="Button1" Background="{DynamicResource DynamicColour}" Height="41" Width="55" Margin="72,139,391.4,140.8"/>
        <Button Content="Button2" Background="{StaticResource BlueBrush}" Height="41" Width="55" Margin="389,61,74.4,218.8" Click="Button_Click"/>
        <Button Content="Button3" Background="{StaticResource GreenBrush}" Height="41" Width="55" Margin="389,199,74.4,80.8" Click="Button_Click_1"/>
    </Grid>
</Window>
